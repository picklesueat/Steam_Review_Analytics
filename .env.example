# Environment configuration for Trakt ingestion
# Copy this file to .env and replace placeholder values with your real credentials before running pipelines.

# Trakt API authentication
TRAKT_CLIENT_ID=your-trakt-client-id
TRAKT_CLIENT_SECRET=your-trakt-client-secret

# Optional request configuration
TRAKT_BASE_URL=https://api.trakt.tv
TRAKT_USER_AGENT=movie-review-analytics-etl/0.1 (+https://github.com/yourname)
TRAKT_MAX_RETRIES=5
TRAKT_BACKOFF_SECONDS=1.0

# Data selection
TRAKT_MOVIE_IDS=inception-2010,dune-2021,blade-runner-2049
BRONZE_STORAGE_ROOT=data/bronze/trakt_comments

# Dagster & orchestration
DAGSTER_HOME=.dagster

# Synthetic replay/testing
IS_SYNTHETIC=false
SOURCE_SYSTEM=trakt
