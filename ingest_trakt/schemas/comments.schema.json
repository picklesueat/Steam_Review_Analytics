{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/trakt/comments.schema.json",
  "title": "Trakt Comment",
  "description": "Schema for Trakt comment (review/shout) payloads.",
  "type": "object",
  "required": [
    "id",
    "comment",
    "created_at",
    "updated_at",
    "spoiler",
    "review",
    "user"
  ],
  "properties": {
    "id": {"type": "integer"},
    "comment": {"type": "string"},
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"},
    "spoiler": {"type": "boolean"},
    "review": {"type": "boolean"},
    "likes": {"type": ["integer", "null"], "minimum": 0},
    "language": {"type": ["string", "null"]},
    "replies": {"type": ["integer", "null"], "minimum": 0},
    "user": {
      "type": "object",
      "required": ["ids", "username"],
      "properties": {
        "username": {"type": "string"},
        "private": {"type": ["boolean", "null"]},
        "name": {"type": ["string", "null"]},
        "ids": {
          "type": "object",
          "properties": {
            "slug": {"type": ["string", "null"]}
          },
          "required": ["slug"]
        }
      }
    }
  },
  "additionalProperties": true
}
